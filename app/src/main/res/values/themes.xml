        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
